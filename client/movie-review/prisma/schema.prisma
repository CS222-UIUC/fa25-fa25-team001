generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String                 @id @default(cuid())
  username             String                 @unique
  password             String
  email                String                 @unique
  bio                  String?
  profilePicture       String                 @default("/default.jpg")
  createdAt            DateTime               @default(now())
  updatedAt            DateTime               @updatedAt
  favoriteGames        Json?
  favoriteMovies       Json?
  favoriteTvShows      Json?
  lists                List[]
  movieRatings         MovieRating[]
  moviesWatched        MovieWatched[]
  platform_connections platform_connections[]
  reviews              Review[]
  tvShowRatings        TvShowRating[]
  tvShowsWatched       TvShowWatched[]
  friendOf             UserFriend[]           @relation("FriendOf")
  friends              UserFriend[]           @relation("UserFriends")
  videoGameRatings     VideoGameRating[]
  videoGamesPlayed     VideoGamePlayed[]

  @@map("users")
}

model Movie {
  id          String         @id @default(cuid())
  title       String
  releaseYear Int?
  genre       String?
  director    String?
  poster      String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  listItems   ListItem[]
  ratings     MovieRating[]
  watchedBy   MovieWatched[]
  reviews     Review[]

  @@map("movies")
}

model VideoGame {
  id          String            @id @default(cuid())
  title       String
  releaseYear Int?
  genre       String?
  developer   String?
  platform    String?
  cover       String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  listItems   ListItem[]
  reviews     Review[]
  ratings     VideoGameRating[]
  playedBy    VideoGamePlayed[]

  @@map("video_games")
}

model TvShow {
  id          String          @id @default(cuid())
  title       String
  releaseYear Int?
  genre       String?
  creator     String?
  poster      String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  listItems   ListItem[]
  reviews     Review[]
  ratings     TvShowRating[]
  watchedBy   TvShowWatched[]

  @@map("tv_shows")
}

model MovieWatched {
  id        String   @id @default(cuid())
  userId    String
  movieId   String
  watchedAt DateTime @default(now())
  rating    Int?
  notes     String?
  movie     Movie    @relation(fields: [movieId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, movieId])
  @@map("movies_watched")
}

model VideoGamePlayed {
  id        String    @id @default(cuid())
  userId    String
  gameId    String
  playedAt  DateTime  @default(now())
  rating    Int?
  notes     String?
  videoGame VideoGame @relation(fields: [gameId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, gameId])
  @@map("video_games_played")
}

model TvShowWatched {
  id        String   @id @default(cuid())
  userId    String
  showId    String
  watchedAt DateTime @default(now())
  rating    Int?
  notes     String?
  tvShow    TvShow   @relation(fields: [showId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, showId])
  @@map("tv_shows_watched")
}

model List {
  id          String     @id @default(cuid())
  title       String
  description String?
  category    String?
  isPublic    Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  userId      String
  items       ListItem[]
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("lists")
}

model ListItem {
  id          String     @id @default(cuid())
  position    Int
  notes       String?
  createdAt   DateTime   @default(now())
  listId      String
  movieId     String?
  videoGameId String?
  tvShowId    String?
  list        List       @relation(fields: [listId], references: [id], onDelete: Cascade)
  movie       Movie?     @relation(fields: [movieId], references: [id], onDelete: Cascade)
  tvShow      TvShow?    @relation(fields: [tvShowId], references: [id], onDelete: Cascade)
  videoGame   VideoGame? @relation(fields: [videoGameId], references: [id], onDelete: Cascade)

  @@map("list_items")
}

model Review {
  id          String     @id @default(cuid())
  title       String?
  content     String
  rating      Int
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  userId      String
  movieId     String?
  videoGameId String?
  tvShowId    String?
  movie       Movie?     @relation(fields: [movieId], references: [id], onDelete: Cascade)
  tvShow      TvShow?    @relation(fields: [tvShowId], references: [id], onDelete: Cascade)
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  videoGame   VideoGame? @relation(fields: [videoGameId], references: [id], onDelete: Cascade)

  @@map("reviews")
}

model UserFriend {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  userId    String
  friendId  String
  friend    User     @relation("FriendOf", fields: [friendId], references: [id], onDelete: Cascade)
  user      User     @relation("UserFriends", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, friendId])
  @@map("user_friends")
}

model MovieRating {
  id        String   @id @default(cuid())
  rating    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  movieId   String
  movie     Movie    @relation(fields: [movieId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, movieId])
  @@map("movie_ratings")
}

model VideoGameRating {
  id        String    @id @default(cuid())
  rating    Float
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  userId    String
  gameId    String
  videoGame VideoGame @relation(fields: [gameId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, gameId])
  @@map("video_game_ratings")
}

model TvShowRating {
  id        String   @id @default(cuid())
  rating    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  showId    String
  tvShow    TvShow   @relation(fields: [showId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, showId])
  @@map("tv_show_ratings")
}

model platform_connections {
  id             String    @id
  platformType   String
  platformUserId String?
  accessToken    String?
  refreshToken   String?
  expiresAt      DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime
  userId         String
  lastSyncedAt   DateTime?
  gamesData      Json?
  users          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, platformType])
}
